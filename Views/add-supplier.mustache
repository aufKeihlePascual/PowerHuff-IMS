<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/dash-style.css">
    <link rel="stylesheet" href="/Views/products.css"> <!-- Linking the same CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/supplier.js"></script>
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="brand">
                <img src="../logo.png" alt="PowerPuff Vape Logo" class="logo" id="logo">
            </div>
            <ul class="menu">
                <li><a href="/dashboard" data-content="dashboard" class="active">Dashboard</a></li>
                <li><a href="#" data-content="order">Order</a></li>
                <li><a href="/dashboard/suppliers" data-content="suppliers" class="active">Suppliers</a></li>
                <li><a href="/dashboard/users" data-content="users">Users</a></li>
                <li>
                    <a href="#" data-content="products">Products</a>
                    <ul class="sub-menu">
                        <li><a href="/dashboard/products" data-content="product-list">All Products</a></li>
                        <li><a href="/dashboard/categories" data-content="product-categories">Categories</a></li>
                        <li><a href="/dashboard/product-items" data-content="product-items">Product Items</a></li>
                    </ul>
                </li>
                <li><a href="#" data-content="reports">Reports</a></li>
            </ul>
        
            <form method="GET" action="/logout">
                <button type="submit" class="logout">Logout</button>
            </form>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Navigation -->
            <header class="top-nav">
                <div class="search-container">
                    <input type="text" id="searchSupplier" placeholder="Search suppliers..." />
                </div>
                <div class="nav-icons">
                    <i class="fa-solid fa-bell" title="Notifications"></i>
                    <i class="fa-solid fa-circle-question" title="Support"></i>
                    <i class="fa-solid fa-gear" title="Settings"></i>
                    <i class="profile" title="Profile">{{ username }}</i>
                </div>
            </header>
            
            <!-- Supplier Management Content -->
            <section class="content">
                <form action="/create-supplier" method="POST">
                    <label for="supplier_name">Supplier Name:</label>
                    <input type="text" name="supplier_name" required>

                    <label for="product_categoryID">Product Category ID:</label>
                    <input type="text" name="product_categoryID" required>

                    <label for="contact_number">Contact Number:</label>
                    <input type="text" name="contact_number" required>

                    <label for="email">Email:</label>
                    <input type="email" name="email" required>

                    <label for="address">Address:</label>
                    <input type="text" name="address" required>

                    <button type="submit">Add Supplier</button>
                </form>
            </section>
        </main>
    </div>
</body>
</html>