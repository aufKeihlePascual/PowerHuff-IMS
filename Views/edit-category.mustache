<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/dash-style.css">
    <link rel="stylesheet" href="/Views/products.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/dashboard.js"></script>
</head>
<body>
    <div class="dashboard-container">
        <!--------------------- Sidebar --------------------->
        <aside class="sidebar">
            <div class="brand">
                <a href="/dashboard"><img src="../logo.png" alt="PowerPuff Vape Logo" class="logo" id="logo"></a>
            </div>
            <ul class="menu">
                <li><a href="/dashboard" data-content="dashboard">Dashboard</a></li>
                <li><a href="#" data-content="order">Order</a></li>
                <li><a href="/dashboard/suppliers" data-content="suppliers">Suppliers</a></li>
                <li>
                    <a href="#" data-content="products" class="active">Products</a>
                    <ul class="sub-menu">
                        <li><a href="/dashboard/products" data-content="product-list">All Products</a></li>
                        <li><a href="/dashboard/categories" data-content="product-categories" class="active">Categories</a></li>
                        <li><a href="/dashboard/product-items" data-content="product-items">Product Items</a></li>
                    </ul>
                </li>
                <li><a href="#" data-content="reports">Reports</a></li>
            </ul>
        
            <form method="GET" action="/logout">
                <button type="submit" class="logout">Logout</button>
            </form>
        </aside>

        <!--------------------- Main Content --------------------->
        <main class="main-content">
            <!--------------------- Top Navigation --------------------->
            <header class="top-nav">
                <div class="search-container">
                    <input type="text" placeholder="Search here..." />
                </div>
                <div class="nav-icons">
                    <i class="fa-solid fa-bell" title="Notifications"></i>
                    <i class="fa-solid fa-circle-question" title="Support"></i>
                    <i class="fa-solid fa-gear" title="Settings"></i>
                    <i class="profile" title="Profile">{{ username }}</i>
                </div>
            </header>

            <!--------------------- Categories Content --------------------->
            <section class="content">
                <h2>Edit Category</h2>
                <form action="/edit-category/{{category.Category_ID}}" method="POST">
                    <div class="form-group">
                        <label for="category_name">Category Name:</label>
                        <input type="text" id="category_name" name="category_name" value="{{category.Name}}" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea id="description" name="description" rows="4">{{category.Description}}</textarea>
                    </div>
                    <button type="submit" class="btn-edit">Update Category</button>
                </form>
            </section>
        </main>
    </div>
</body>
</html>