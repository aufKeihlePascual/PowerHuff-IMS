<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/css/dash-style.css">
    <link rel="stylesheet" href="/Views/css/suppliers.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/js/dashboard.js"></script>
</head>
<body>
    <div class="dashboard-container">
        {{> sidebar}}
        <main class="main-content">
            {{> top-nav}}
            <section class="content">
                <div class="header">
                    <h1 class="main-header">{{title}}</h1>
                </div>
                {{#success_message}}
                <div class="alert alert-success">{{success_message}}</div>
                {{/success_message}}
                {{#error_message}}
                <div class="alert alert-error">{{error_message}}</div>
                {{/error_message}}
                <form action="/edit-product-item/{{productItem.product_item_id}}" method="POST">
                    <div class="form-group">
                        <label for="product_id">Product:</label>
                        <select name="product_id" id="product_id" required>
                            {{#products}}
                            <option value="{{Product_ID}}" {{#selected}}selected{{/selected}}>{{Product_Name}}</option>
                            {{/products}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="size">Size:</label>
                        <input type="text" name="size" id="size" value="{{productItem.size}}">
                    </div>
                    <div class="form-group">
                        <label for="color">Color:</label>
                        <input type="text" name="color" id="color" value="{{productItem.color}}">
                    </div>
                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="number" step="0.01" name="price" id="price" value="{{productItem.price}}" required>
                    </div>
                    <div class="form-group">
                        <label for="stock_quantity">Stock Quantity:</label>
                        <input type="number" name="stock_quantity" id="stock_quantity" value="{{productItem.stock_quantity}}" required>
                    </div>
                    <button type="submit" class="btn-primary">Update Product Item</button>
                </form>
            </section>
        </main>
    </div>
</body>
</html>