<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/dash-style.css">
    <link rel="stylesheet" href="/Views/products.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/dashboard.js"></script>
</head>
<body>
    <div class="dashboard-container">
        <!--------------------- Sidebar --------------------->
        <aside class="sidebar">
            <div class="brand">
                <a href="/dashboard"><img src="../logo.png" alt="PowerPuff Vape Logo" class="logo" id="logo"></a>
            </div>
            <ul class="menu">
                <li><a href="/dashboard" data-content="dashboard">Dashboard</a></li>
                <li><a href="#" data-content="order">Order</a></li>
                <li><a href="/dashboard/suppliers" data-content="suppliers">Suppliers</a></li>
                <li>
                    <a href="#" data-content="products" class="active">Products</a>
                    <ul class="sub-menu">
                        <li><a href="/dashboard/products" data-content="product-list">All Products</a></li>
                        <li><a href="/dashboard/categories" data-content="product-categories">Categories</a></li>
                        <li><a href="/dashboard/product-items" data-content="product-items" class="active">Product Items</a></li>
                    </ul>
                </li>
                <li><a href="#" data-content="reports">Reports</a></li>
            </ul>
        
            <form method="GET" action="/logout">
                <button type="submit" class="logout">Logout</button>
            </form>
        </aside>

        <!--------------------- Main Content --------------------->
        <main class="main-content">
            <!--------------------- Top Navigation --------------------->
            <header class="top-nav">
                <div class="search-container">
                    <input type="text" placeholder="Search here..." />
                </div>
                <div class="nav-icons">
                    <i class="fa-solid fa-bell" title="Notifications"></i>
                    <i class="fa-solid fa-circle-question" title="Support"></i>
                    <i class="fa-solid fa-gear" title="Settings"></i>
                    <i class="profile" title="Profile">{{ username }}</i>
                </div>
            </header>

            <!--------------------- Product Items Content --------------------->
            <section class="content">
                <h2>Edit Product Item</h2>
                <form action="/edit-product-item/{{productItem.Item_ID}}" method="POST">
                    <div class="form-group">
                        <label for="product_id">Product:</label>
                        <select id="product_id" name="product_id" required>
                            {{#products}}
                                <option value="{{Product_ID}}" {{#selected}}selected{{/selected}}>{{Product_Name}}</option>
                            {{/products}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="number" id="price" name="price" step="0.01" value="{{productItem.Price}}" required>
                    </div>
                    <div class="form-group">
                        <label for="stock_quantity">Stock Quantity:</label>
                        <input type="number" id="stock_quantity" name="stock_quantity" value="{{productItem.Stock_Quantity}}" required>
                    </div>
                    <button type="submit" class="btn-edit">Update Product Item</button>
                </form>
            </section>
        </main>
    </div>
</body>
</html>