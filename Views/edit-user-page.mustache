<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/dash-style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/dashboard.js"></script>
</head>
<body>
    <div class="dashboard-container">
        <!--------------------- Sidebar --------------------->
        <aside class="sidebar">
            <div class="brand">
                <img src="../logo.png" alt="PowerPuff Vape Logo" class="logo" id="logo">
            </div>
            <ul class="menu">
                <li><a href="/dashboard" data-content="dashboard" class="active">Dashboard</a></li>
                <li><a href="#" data-content="order">Order</a></li>
                <li><a href="#" data-content="suppliers">Suppliers</a></li>
                <li><a href="/dashboard/users" data-content="users">Users</a></li>
                <li>
                    <a href="#" data-content="products">Products</a>
                    <ul class="sub-menu">
                        <li><a href="/dashboard/products" data-content="product-list">All Products</a></li>
                        <li><a href="/dashboard/categories" data-content="product-categories">Categories</a></li>
                        <li><a href="/dashboard/product-items" data-content="product-items">Product Items</a></li>
                    </ul>
                </li>
                <li><a href="#" data-content="reports">Reports</a></li>
            </ul>
        
            <form method="GET" action="/logout">
                <button type="submit" class="logout">Logout</button>
            </form>
        </aside>

        <!--------------------- Main Content --------------------->
        <main class="main-content">

            <!--------------------- Top Navigation --------------------->
            <header class="top-nav">
                <div class="search-container">
                    <input type="text" id="searchUser" placeholder="Search users..." />
                </div>
                <div class="nav-icons">
                    <i class="fa-solid fa-bell" title="Notifications"></i>
                    <i class="fa-solid fa-circle-question" title="Support"></i>
                    <i class="fa-solid fa-gear" title="Settings"></i>
                    <i class="profile" title="Profile">{{ username }}</i>
                </div>
            </header>
            
            <!--------------------- User Management Content --------------------->
            <section class="content">
                <h1>Edit User</h1>
                <form action="/edit-user/{{user_id}}" method="POST"">
                    <input type="hidden" name="user_id" value="{{user_id}}" />

                    <label for="first_name">First Name</label>
                    <input type="text" id="first_name" name="first_name" value="{{first_name}}" required />

                    <label for="last_name">Last Name</label>
                    <input type="text" id="last_name" name="last_name" value="{{last_name}}" required />

                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" value="{{username}}" required />

                    <label for="password">Password (Leave blank to keep current password)</label>
                    <input type="password" id="password_hash" name="password_hash" />
                    <i class="fa fa-eye" id="togglePassword" title="Show/Hide Password"></i>
                    
                    <!-- <div class="show-password-wrapper">
                        <input type="password" id="password_hash" name="password_hash" />
                        <i class="fa fa-eye" id="togglePassword" title="Show/Hide Password"></i>
                    </div> -->

                    <label for="role">Role</label>
                    <select id="role" name="role" required>
                        <option value="Admin" {{selectedAdmin}}>Admin</option>
                        <option value="Inventory_Manager" {{selectedInventoryManager}}>Inventory Manager</option>
                        <option value="Procurement_Manager" {{selectedProcurementManager}}>Procurement Manager</option>
                    </select>

                    <div class="button-container">
                        <a href="/dashboard/users" class="cancel-btn">Cancel</a>
                        <button type="submit" class="update-btn">Update</button>
                    </div>
                </form>
            </section>
        </main>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const togglePassword = document.getElementById("togglePassword");
            const passwordInput = document.getElementById("password_hash"); // Updated to match input id
    
            if (togglePassword && passwordInput) {
                togglePassword.addEventListener("click", function () {
                    // Toggle the type attribute
                    const type = passwordInput.type === "password" ? "text" : "password";
                    passwordInput.type = type;
    
                    // Toggle the icon
                    this.classList.toggle("fa-eye");
                    this.classList.toggle("fa-eye-slash");
                });
            }
        });
    </script>
</body>
</html>



