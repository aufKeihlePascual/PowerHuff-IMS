<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/dash-style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/dashboard.js"></script>
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="brand">
                <img src="../logo.png" alt="PowerPuff Vape Logo" class="logo" id="logo">
            </div>
            <ul class="menu">
                <li><a href="/dashboard" data-content="dashboard" class="active">Dashboard</a></li>
                <li><a href="/dashboard/order" data-content="order">Order</a></li>
                <li><a href="/dashboard/suppliers" data-content="suppliers">Suppliers</a></li>
                <li><a href="/dashboard/products" data-content="products">Products</a></li>
                <li><a href="/dashboard/stocks" data-content="stocks">Stocks</a></li>
                <li><a href="/dashboard/reports" data-content="reports">Reports</a></li>
            </ul>
            <form method="GET" action="/logout">
                <button type="submit" class="logout">Logout</button>
            </form>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="top-nav">
                <div class="search-container">
                    <input type="text" placeholder="Search here..." />
                </div>
                <div class="nav-icons">
                    <i class="fa-solid fa-bell" title="Notifications"></i>
                    <i class="fa-solid fa-circle-question" title="Support"></i>
                    <i class="fa-solid fa-gear" title="Settings"></i>
                    <i class="profile" title="Profile">{{ username }}</i>
                </div>
            </header>
            <div id="content">
                <div class="p-4">
                    <h2 class="text-2xl font-bold mb-4">Products</h2>
                    <!-- Table Container -->
                    <div class="table-container">
                        <table id="productsTable" class="min-w-full bg-white">
                            <thead class="bg-gray-100">
                                <tr>
                                    <!-- <th class="py-2 px-4 border-b">Product ID</th> -->
                                    <th class="py-2 px-4 border-b">Product Name</th>
                                    <th class="py-2 px-4 border-b">Description</th>
                                    <th class="py-2 px-4 border-b">Price</th>
                                    <th class="py-2 px-4 border-b">Stock Quantity</th>
                                    <th class="py-2 px-4 border-b">Lowstock Threshold</th>
                                    <th class="py-2 px-4 border-b">Supplier ID</th>
                                    <th class="py-2 px-4 border-b">Created On</th>
                                    <th class="py-2 px-4 border-b">Updated On</th>
                                    <th class="py-2 px-4 border-b">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Product rows will be inserted here by JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        $(document).ready(function() {
            function loadProducts() {
                $.ajax({
                    url: '/api/products',
                    method: 'GET',
                    dataType: 'json',
                    success: function(response) {
                        const products = response.products || response;
                        const tableBody = $('#productsTable tbody');
                        tableBody.empty();

                        products.forEach(product => {
                            const row = `
                                <tr class="hover:bg-gray-50">
                                    <td class="py-2 px-4 border-b">${product.product_name || ''}</td>
                                    <td class="py-2 px-4 border-b">${product.description || 'N/A'}</td>
                                    <td class="py-2 px-4 border-b">${product.price ? 'â‚± ' + parseFloat(product.price).toFixed(2) : ''}</td>
                                    <td class="py-2 px-4 border-b">${product.stock_quantity || ''}</td>
                                    <td class="py-2 px-4 border-b">${product.lowstock_threshold || ''}</td>
                                    <td class="py-2 px-4 border-b">${product.supplier_id || ''}</td>
                                    <td class="py-2 px-4 border-b">${product.created_on || ''}</td>
                                    <td class="py-2 px-4 border-b">${product.updated_on || 'N/A'}</td>
                                    <td class="py-2 px-4 border-b">
                                        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded mr-2 edit-product" data-id="${product.product_id}">
                                            Edit
                                        </button>
                                        <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded delete-product" data-id="${product.product_id}">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            `;
                            tableBody.append(row);
                        });

                        // Add event listeners for edit and delete buttons
                        $('.edit-product').on('click', function() {
                            const productId = $(this).data('id');
                            editProduct(productId);
                        });

                        $('.delete-product').on('click', function() {
                            const productId = $(this).data('id');
                            deleteProduct(productId);
                        });
                    },
                    error: function(xhr, status, error) {
                        console.error('Error loading products:', error);
                        $('#content').html('<p>Failed to load products. Please try again later.</p>');
                    }
                });
            }

            function editProduct(productId) {
                console.log('Edit product', productId);
            }

            function deleteProduct(productId) {
                if (confirm('Are you sure you want to delete this product?')) {
                    $.ajax({
                        url: `/api/products/${productId}`,
                        method: 'DELETE',
                        success: function(response) {
                            alert('Product deleted successfully');
                            loadProducts();
                        },
                        error: function(xhr, status, error) {
                            console.error('Error deleting product:', error);
                            alert('Failed to delete product. Please try again.');
                        }
                    });
                }
            }

            loadProducts();
        });
    </script>
</body>
</html>
