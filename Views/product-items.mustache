<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/dash-style.css">
    <link rel="stylesheet" href="/Views/products.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/dashboard.js"></script>
</head>

<body>
    <div class="dashboard-container">
        {{> sidebar}}
        <main class="main-content">
            {{> top-nav}}
            
            <!--------------------- Product Items Content --------------------->
            <section class="content">
                <div class="header">
                    <h1 class="main-header">{{title}}</h1>
                </div>
                {{#success_message}}
                    <div class="alert alert-success">{{success_message}}</div>
                {{/success_message}}
                {{#error_message}}
                    <div class="alert alert-error">{{error_message}}</div>
                {{/error_message}}
                <div class="table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Stock Quantity</th>
                                <th>Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#productItems}}
                            <tr>
                                <td>{{Product_Name}}</td>
                                <td>â‚± {{Price}}</td>
                                <td>{{Stock_Quantity}}</td>
                                <td>{{Updated_On}}</td>
                                <td>
                                    <a href="/edit-product-item/{{Item_ID}}" class="btn-edit">Edit</a>
                                    <form action="/delete-product-item/{{Item_ID}}" method="POST" style="display: inline;">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this product item?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            {{/productItems}}
                        </tbody>
                    </table>
                </div>
                <a href="/add-product-item" class="btn-add">Add New Product Item</a>
            </section>
        </main>
    </div>
</body>
</html>