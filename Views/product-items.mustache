<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/dash-style.css">
    <link rel="stylesheet" href="/Views/products.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/dashboard.js"></script>
</head>

<body>
    <div class="dashboard-container">
        <!--------------------- Sidebar --------------------->
        <aside class="sidebar">
            <div class="brand">
                <a href="/dashboard"><img src="../logo.png" alt="PowerPuff Vape Logo" class="logo" id="logo"></a>
            </div>
            <ul class="menu">
                <li><a href="/dashboard" data-content="dashboard">Dashboard</a></li>
                <li><a href="#" data-content="order">Order</a></li>
                <li><a href="/dashboard/suppliers" data-content="suppliers">Suppliers</a></li>
                <li>
                    <a href="#" data-content="products" class="active">Products</a>
                    <ul class="sub-menu">
                        <li><a href="/dashboard/products" data-content="product-list">All Products</a></li>
                        <li><a href="/dashboard/categories" data-content="product-categories">Categories</a></li>
                        <li><a href="/dashboard/product-items" data-content="product-items" class="active">Product
                                Items</a></li>
                    </ul>
                </li>
                <li><a href="#" data-content="reports">Reports</a></li>
            </ul>

            <form method="GET" action="/logout">
                <button type="submit" class="logout">Logout</button>
            </form>
        </aside>

        <!--------------------- Main Content --------------------->
        <main class="main-content">
            <!--------------------- Top Navigation --------------------->
            <header class="top-nav">
                <div class="search-container">
                    <input type="text" placeholder="Search here..." />
                </div>
                <div class="nav-icons">
                    <i class="fa-solid fa-bell" title="Notifications"></i>
                    <i class="fa-solid fa-circle-question" title="Support"></i>
                    <i class="fa-solid fa-gear" title="Settings"></i>
                    <i class="profile" title="Profile">{{ username }}</i>
                </div>
            </header>
            
            <!--------------------- Product Items Content --------------------->
            <section class="content">
                <div class="header">
                    <h1 class="main-header">{{title}}</h1>
                </div>
                {{#success_message}}
                    <div class="alert alert-success">{{success_message}}</div>
                {{/success_message}}
                {{#error_message}}
                    <div class="alert alert-error">{{error_message}}</div>
                {{/error_message}}
                <div class="table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Stock Quantity</th>
                                <th>Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#productItems}}
                            <tr>
                                <td>{{Product_Name}}</td>
                                <td>â‚± {{Price}}</td>
                                <td>{{Stock_Quantity}}</td>
                                <td>{{Updated_On}}</td>
                                <td>
                                    <a href="/edit-product-item/{{Item_ID}}" class="btn-edit">Edit</a>
                                    <form action="/delete-product-item/{{Item_ID}}" method="POST" style="display: inline;">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this product item?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            {{/productItems}}
                        </tbody>
                    </table>
                </div>
                <a href="/add-product-item" class="btn-add">Add New Product Item</a>
            </section>
        </main>
    </div>
</body>
</html>