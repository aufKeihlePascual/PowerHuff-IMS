<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/dash-style.css">
    <link rel="stylesheet" href="/Views/products.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/dashboard.js"></script>
    
</head>
<body>
    <div class="dashboard-container">
        <!--------------------- Sidebar --------------------->
        <aside class="sidebar">
            <div class="brand">
                <img src="../logo.png" alt="PowerPuff Vape Logo" class="logo" id="logo">
            </div>
            <ul class="menu">
                <li><a href="/inventory-manager-dashboard" data-content="dashboard">Dashboard</a></li>
                <li><a href="#" data-content="order">Order</a></li>
                <li><a href="#" data-content="suppliers">Suppliers</a></li>
                <li>
                    <a href="#" data-content="products" class="active">Products</a>
                    <ul class="sub-menu">
                        <li><a href="/dashboard/products" data-content="product-list" class="active">All Products</a></li>
                        <li><a href="/dashboard/categories" data-content="product-categories">Categories</a></li>
                        <li><a href="/dashboard/product-items" data-content="product-items">Product Items</a></li>
                    </ul>
                </li>
                <li><a href="#" data-content="reports">Reports</a></li>
            </ul>
        
            <form method="GET" action="/logout">
                <button type="submit" class="logout">Logout</button>
            </form>
        </aside>

        <!--------------------- Main Content --------------------->
        <main class="main-content">
            <!--------------------- Top Navigation --------------------->
            <header class="top-nav">
                <div class="search-container">
                    <input type="text" placeholder="Search here..." />
                </div>
                <div class="nav-icons">
                    <i class="fa-solid fa-bell" title="Notifications"></i>
                    <i class="fa-solid fa-circle-question" title="Support"></i>
                    <i class="fa-solid fa-gear" title="Settings"></i>
                    <i class="profile" title="Profile">{{ username }}</i>
                </div>
            </header>

            <!--------------------- Products Content --------------------->
            <section class="content">
                <h2>All Products</h2>
                <div class="table">
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Stock Quantity</th>
                                <th>Lowstock Threshold</th>
                                <th>Supplier Name</th>
                                <th>Created On</th>
                                <th>Category</th>
                                <th>Product Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#products}}
                            <tr>
                                <td>{{Product_ID}}</td>
                                <td>{{Product_Name}}</td>
                                <td>{{Product_Description}}</td>
                                <td>{{Price}}</td>
                                <td>{{Stock_Quantity}}</td>
                                <td>{{Lowstock_Threshold}}</td>
                                <td>{{Supplier_Name}}</td>
                                <td>{{Created_On}}</td>
                                <td>{{Category_Name}}</td>
                                <td>{{Product_Category_Name}}</td>
                                <td>
                                    <a href="/edit-product/{{Product_ID}}" class="btn-edit">Edit</a>
                                    <a href="/delete-product/{{Product_ID}}" class="btn-delete">Delete</a>
                                </td>
                            </tr>
                            {{/products}}
                        </tbody>
                    </table>
                <a href="/add-product" class="btn-add">Add New Product</a>
            </div>
            </section>
        </main>
    </div>
</body>
</html>