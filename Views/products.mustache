<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/dash-style.css">
    <link rel="stylesheet" href="/Views/products.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/dashboard.js"></script>
    <script src="/Views/products.js"></script>
    
</head>
<body>
    <div class="dashboard-container">
        {{> sidebar}}
        <main class="main-content">
            {{> top-nav}}

            <!--------------------- Products Content --------------------->
            <section class="content">
                <div class="header">
                    <h1 class="main-header">{{title}}</h1>
                </div>
                {{#success_message}}
                    <div class="alert alert-success">{{success_message}}</div>
                {{/success_message}}
                {{#error_message}}
                    <div class="alert alert-error">{{error_message}}</div>
                {{/error_message}}
                    <div class="table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Category</th>
                                    <th>Product Category</th>
                                    <th>Price</th>
                                    <th>Stock Quantity</th>
                                    <th>Lowstock Threshold</th>
                                    <th>Supplier Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#products}}
                                <tr>
                                    <td>{{Product_Name}}</td>
                                    <td>{{Product_Description}}</td>
                                    <td>{{Category_Name}}</td>
                                    <td>{{Product_Category_Name}}</td>
                                    <td>â‚± {{Price}}</td>
                                    <td>{{Stock_Quantity}}</td>
                                    <td>{{Lowstock_Threshold}}</td>
                                    <td>{{Supplier_Name}}</td>
                                    <td>
                                        <a href="/edit-product/{{Product_ID}}" class="btn-edit">Edit</a>
                                        <a href="/delete-product/{{Product_ID}}" class="btn-delete">Delete</a>
                                    </td>
                                </tr>
                                {{/products}}
                            </tbody>
                        </table>
                    <a href="/add-product" class="btn-add">Add New Product</a>
                </div>
            </section>
        </main>
    </div>
</body>
</html>