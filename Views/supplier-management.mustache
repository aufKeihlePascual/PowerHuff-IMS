<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/Views/dash-style.css">
    <link rel="stylesheet" href="/Views/products.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Views/dashboard.js"></script>
    <script src="/Views/supplier.js"></script>
</head>
<body>
    <div class="dashboard-container">
        {{> sidebar}}
        <main class="main-content">
            {{> top-nav}}
            
            <section class="content">
                <div class="header">
                    <h1 class="main-header">{{title}}</h1>
                </div>

                <div class="table">
                    <table>
                        <thead>
                            <tr>
                                <th>Supplier Name</th>
                                <th>Category</th>
                                <th>Product Category</th>
                                <th>Contact Number</th>
                                <th>Created On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#suppliers}}
                            <tr>
                                <td>{{supplier_name}}</td>
                                <td>{{category_name}}</td>
                                <td>{{name}}</td> 
                                <td>{{contact_number}}</td> 
                                <td>{{created_on}}</td> 
                                <td>
                                    <a href="/edit-supplier/{{supplier_id}}" class="btn-edit">Edit</a>
                                    <form action="/delete-supplier/{{supplier_id}}" method="POST" style="display:inline;">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            {{/suppliers}}
                        </tbody>
                    </table>
                    <a href="/add-supplier" class="btn-add">Add New Supplier</a>
                </div>
            </section>

        </main>
    </div>
</body>
</html>
